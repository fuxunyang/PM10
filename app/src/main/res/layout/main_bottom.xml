<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="horizontal">

    <RelativeLayout
        android:id="@+id/id_main"
        style="@style/bottom_layout_style">

        <ImageView
            android:id="@+id/lable_06_img"
            style="@style/bottom_image_style"
            android:layout_alignLeft="@+id/lable_06_tv"
            android:layout_alignRight="@+id/lable_06_tv"
            android:src="@mipmap/tab_01" />

        <TextView
            android:id="@+id/lable_06_tv"
            style="@style/bottom_text_style"
            android:layout_below="@+id/lable_06_img"
            android:text="@string/tab_main" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/id_two"
        style="@style/bottom_layout_style">

        <ImageView
            android:id="@+id/lable_07_img"
            style="@style/bottom_image_style"
