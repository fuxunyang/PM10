            android:layout_alignRight="@+id/lable_07_tv"
            android:src="@mipmap/tab_02" />

        <TextView
            android:id="@+id/lable_07_tv"
            style="@style/bottom_text_style"
            android:layout_below="@+id/lable_07_img"
            android:text="@string/tab_two" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/id_three"
        style="@style/bottom_layout_style">

        <ImageView
            android:id="@+id/lable_08_img"
            style="@style/bottom_image_style"
            android:layout_alignLeft="@+id/lable_08_tv"
            android:layout_alignRight="@+id/lable_08_tv"
            android:src="@mipmap/tab_03" />

        <TextView
            android:id="@+id/lable_08_tv"
            style="@style/bottom_text_style"
            android:layout_below="@+id/lable_08_img"
            android:text="@string/tab_three" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/id_four"
        style="@style/bottom_layout_style">

        <ImageView
            android:id="@+id/lable_09_img"
            style="@style/bottom_image_style"
            android:layout_alignLeft="@+id/lable_09_tv"
            android:layout_alignRight="@+id/lable_09_tv"
            android:src="@mipmap/tab_04" />

        <TextView
            android:id="@+id/lable_09_tv"
            style="@style/bottom_text_style"
            android:layout_below="@+id/lable_09_img"
            android:text="@string/tab_my" />
    </RelativeLayout>

</LinearLayout>